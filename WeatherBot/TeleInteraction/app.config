<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!--
      При развертывании проекта библиотеки службы, содержание конфигурационного файла должен быть добавлен в
      app.config файл хоста. System.Configuration не поддерживает файлы конфигурации для библиотек.
   -->
  <system.serviceModel>
    <services>
      <service name="WeatherBot.TeleInteraction.MessagesConveyor">
        <endpoint address="WeatherBot.TeleInteraction" binding="wsDualHttpBinding"
          contract="WeatherBot.TeleInteraction.IMessagesConveyorService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/TeleInteraction/MessagesConveyorService/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!--
              Во избежание раскрытия информации о метаданных,
              установите значения ниже false перед развертыванием
           -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True" />
          <!--
              Для того, чтобы получать сведения об исключениях во время отладки,
              установите значение ниже true. Установите false перед развертыванием
              чтобы избежать раскрытия информации об исключениях
           -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-8.0.0.0" newVersion="8.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>